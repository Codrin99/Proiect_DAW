@model Proiect.Models.Produs


@{
    ViewBag.Title = "Edit";
    string textRecenzie = " foarte bun";
    var produs = ViewBag.Produs;
}

<h2>Editeaza date despre acest produs</h2>


<form method="post" action="/Produs/Update">
    @Html.LabelFor(m => m.Denumire)
    <br />
    @Html.TextBoxFor(m => m.Denumire, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Denumire)
    <br />
    @Html.LabelFor(m => m.Pret)
    <br />
