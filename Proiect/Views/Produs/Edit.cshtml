    <input type="hidden" name="ProdusId" value="@Model.ProdusId" />
    <br />
    <button type="submit" class="btn btn-dark" style="background-color:rgb(88, 88, 88);"><p style="color:white; margin-bottom:-1px;">Salveaza modificarile</p></button>

</form>
<br />
<form method="post" action="/Produs/Delete/@Model.ProdusId">
