@model List<Proiect.Models.Magazin>
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "NewRecenzie";
}

<h2>Magazine Disponibile</h2>

<table class="table">
    <thead class="thead-dark">
        <tr style="font-weight:bold; font-size:20px;">
            <th scope="col">ID</th>
            <th scope="col"> Denumire Magazin</th>
            <th scope="col">Oras</th>
        </tr>
    </thead>
    @foreach (var magazin in ViewBag.Magazin)
    {
        <tr style="font-size:16px;">
            <td>@magazin.MagazinId</td>
            <td>@magazin.DenumireMagazin</td>
            <td>@magazin.Oras</td>
        </tr>
    }
</table>
<br />
<br />
<form method="post" action="/Produs/Atribui">
    <p style="font-size:16px;">Id Magazin</p>
    <input class="form-control" type="text" name="MagazinId" value="" />
    <br />
    <p style="font-size:16px;">Nume magazin</p>
    <input class="form-control" type="text" name="DenumireMagazin" value="" />
    <br />
    <p style="font-size:16px;">Oras</p>
    <input class="form-control" type="text" name="Oras" value="" />
    <input type="hidden" name="ProdusId" value="@ViewData["ProdusId"]" />
    <br />
    <button type="submit" class="btn btn-dark" style="background-color:rgb(44, 44, 44);"><p style="color:white; margin-bottom:-1px;">Atribuie produsul acestui magazin</p></button>

</form>